  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/shared/connectillyctl/main.go",
      "args": [
        "generate",
        "client",
        "event",
        "--protobufFilePath=${workspaceFolder}/api-definitions/protobuf/events/connectilly/Organization_V1.proto",
        "--packageName=v1",
        "--eventType=Event",
        "--topicName=organization.v1.event",
        "--outputPath=${workspaceFolder}/src/shared/clients/events/connectilly/organization/v1"
      ]
    }
  ]
}
